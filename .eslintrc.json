{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "prefer-destructuring": ["error", {
            "array": false,
            "object": true
          }
        ]
    }
}
