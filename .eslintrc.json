{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "airbnb-base"
    ],
    "settings": {
        "import/resolver": {
            "typescript": {} 
        }
    },
    "rules": {
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline"
        }],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "js": "never",
                "ts": "never"
            }
        ],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "prefer-destructuring": ["error", {
            "array": false,
            "object": true
          }
        ]
    }
} 
